{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "test"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "backend": "yarn workspace heimdall-server",
    "build": "lerna run build",
    "cypress-test": "yarn workspace @heimdall/cypress-tests",
    "frontend": "yarn workspace @mitre/heimdall-lite",
    "hdf-converters": "yarn workspace @mitre/hdf-converters",
    "inspecjs": "yarn workspace inspecjs",
    "lint": "lerna run lint",
    "lint:ci": "lerna run lint:ci",
    "pack:all": "lerna exec yarn pack --scope inspecjs --scope @mitre/heimdall-lite --scope @mitre/hdf-converters --parallel",
    "start": "yarn backend start",
    "start:dev": "dotenv -e .env -- lerna exec yarn run start:dev --ignore @heimdall/interfaces --ignore @mitre/hdf-converters  --ignore @heimdall/password-complexity --ignore @heimdall/cypress-tests --ignore inspecjs",
    "test:ui": "cypress run",
    "test:ui:open": "cypress open"
  },
  "dependencies": {
    "@aws-sdk/client-config-service": "^3.23.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^5.0.0",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^3.0.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "patch-package": "^6.5.1",
    "postinstall-prepare": "^2.0.0",
    "dotenv-cli": "^7.0.0"
  },
  "engines": {
    "node": "^18.0.0"
  }
}
