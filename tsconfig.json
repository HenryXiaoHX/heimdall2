{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"]
  },
  "include": [
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
