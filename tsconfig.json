{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
