{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "lib": [
      "es2020"
    ],
    "paths": {}
  },
  "ts-node":{
    "esm":true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
