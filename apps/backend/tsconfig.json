{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "lib": [
      "es2020"
    ],
    "paths": {},
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "ts-node": {"esm": true},
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
